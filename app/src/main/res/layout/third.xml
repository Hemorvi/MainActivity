<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="5dip"
    android:background="#EEEEEE">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip"
        android:background="#EEEEEE">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="#509ddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/class3"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="\t3rd Class\nTime Table"
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/class3">


                <TableLayout
                    android:id="@+id/tabla_cuerpo"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10dip">

                    <!--    <View
                            android:layout_height="2dip"
                            android:background="#000000"
                            android:layout_marginTop="5dip"/>-->

                    <TableRow android:id="@+id/tabletitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_span="7"
                            android:orientation="vertical">

                            <TextView
                                android:background="@drawable/cell_shape"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:gravity="center"
                                android:id="@+id/title1"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="1st" />

                        </LinearLayout>

                    </TableRow>

                    <TableRow android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/srno"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/day1"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="MON" />
                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/day2"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="TUE" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/day3"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="WED" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/day4"
                            android:layout_column="1"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="THU" />
                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/day5"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="FRI" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/day6"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="SAT" />

                    </TableRow>

                    <!--    <View
                            android:layout_height="2dip"
                            android:background="#000000" />-->

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/time1"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="9:00" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/sub1"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="English" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/sub2"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Kannada" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/sub3"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Maths" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/sub4"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Drawing" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/sub5"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Maths" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/sub6"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="English" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/time2"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="9:30" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/ssub1"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Maths" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/ssub2"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Drawing" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/ssub3"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Kannada" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/ssub4"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Maths" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/ssub5"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="English" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/ssub6"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Maths" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/time3"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="10:00" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/tsub1"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Kannada" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:gravity="center"
                            android:id="@+id/tsub2"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="English" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/tsub3"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Drawing" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/tsub4"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="English" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/tsub5"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Drawing" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/tsub6"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Kannada" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/brak"
                            android:layout_span="7"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Break"
                            android:textStyle="bold"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/time4"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="11:00" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/fsub1"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Drawing" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:gravity="center"
                            android:id="@+id/fsub2"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Maths" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/fsub3"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="English" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/fsub4"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Kannada" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/fsub5"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Kannada" />

                        <TextView
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:id="@+id/fsub6"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Drawing" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="80dip"
                                android:gravity="center_vertical"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:id="@+id/time6"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="11:30\n\tto\n12:30" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="80dip"
                            android:gravity="center|center_vertical"
                            android:background="@drawable/cell_shape"
                            android:layout_span="6"
                            android:padding="5dp"
                            android:id="@+id/sisub1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Sport" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</HorizontalScrollView>